package solution;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class Solution {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] test = new int[] {5, 4, 6, 2};
		System.out.println(
				permute(test));
	}
	

    
	   public static List<List<Integer>> permute(int[] num) {
	        return getPermute(num);
	    }
	    
	    private static List<List<Integer>> getPermute(int[] num) {
	        List<List<Integer>> result = new ArrayList<List<Integer>>();
	        if (num == null || num.length == 0)
	            return result;
	            
	        ArrayList<Integer> list = new ArrayList<Integer>();
	        list.add(num[0]);
	        result.add(list);
	        
	        if (num.length == 1) {
	            return result;
	        }
	        
	        for (int i = 1; i < num.length; i++) {
	            List<List<Integer>> newResult = new ArrayList<List<Integer>>();
	            for (List<Integer> lst : result) {
	                int len = lst.size();
	                for (int j = 0; j <= len; j++) {
	                    ArrayList<Integer> permute = new ArrayList<Integer>(lst);
	                    lst.add(j, num[i]);
	                    newResult.add(lst);
	                }
	            }
	            result = newResult;
	        }
	        
	        return result;
	    }

}
